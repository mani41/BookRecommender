<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent">

    <TextView
        android:text = ""
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/textview"
        android:textSize = "25dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Requesting BookInfo:"
        android:id = "@+id/textView"
        android:textColor = "#006420"
        android:textSize = "35dp"
        android:layout_below="@+id/textview"
        android:layout_alignStart="@+id/loginB" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/bookName"
        android:hint = "Book Name"
        android:textStyle="italic"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#bd7e6b"
        android:layout_marginTop = "46dp"
        android:layout_below = "@+id/textView"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:textStyle="italic"
        android:id="@+id/bookAuthor"
        android:layout_below="@+id/bookName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bookName"
        android:layout_alignEnd="@+id/bookName"
        android:textColorHint="#bd846b"
        android:hint="Author Name(optional)" />

    <!--Button
        android:id="@+id/doneB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@+id/textview"
        android:backgroundTint="@color/colorAccent"
        android:elevation="0dp"
        android:onClick="doneButton"
        android:layout_weight="1"
        android:text="done"
        android:textSize="28dp" /-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button style="@style/PrimaryButton"
            android:id="@+id/doneB"
            android:layout_height="50dp"
            android:text="DONE"
            android:onClick="doneButton"
            android:textSize="20dp"
            android:textScaleX="1.5"
            android:enabled="true"
            android:layout_width="fill_parent"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>


</RelativeLayout>